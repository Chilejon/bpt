@model BPT.ViewModels.Home.PlayersViewModel
@{
    ViewData["Title"] = "Start";
}

@ViewBag.starter


<form asp-controller="Home" asp-action="Start" method="post" class="form-horizontal" role="form">
    <div class="form-horizontal">
        
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="StarterId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="StarterId" class="form-control" value="@ViewBag.id" readonly="readonly"/>
                <span asp-validation-for="StarterId" class="text-danger"></span>
            </div>
        </div>
        
        
        <div class="form-group">
            <label asp-for="YourEmail" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="YourEmail" class="form-control"/>
                <span asp-validation-for="YourEmail" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Player2" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Player2" class="form-control"/>
                <span asp-validation-for="Player2" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Player3" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Player3" class="form-control"/>
                <span asp-validation-for="Player3" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Player4" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Player4" class="form-control"/>
                <span asp-validation-for="Player4" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Player5" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Player5" class="form-control"/>
                <span asp-validation-for="Player5" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Player6" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Player6" class="form-control"/>
                <span asp-validation-for="Player6" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Player7" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Player7" class="form-control"/>
                <span asp-validation-for="Player7" class="text-danger"></span>
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </div>
    </div>
</form>
